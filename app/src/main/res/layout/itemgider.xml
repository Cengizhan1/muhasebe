<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/vizyonGray"
    android:gravity="center"
    android:paddingLeft="10dp"
    android:paddingRight="5dp">

    <TextView
        android:id="@+id/txtGiderTürü"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Nalbur"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtGiderAciklama" />

    <TextView
        android:id="@+id/txtGiderAciklama"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Açıklama"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@+id/txtGiderTarih"
        app:layout_constraintStart_toEndOf="@+id/txtGiderTürü"
        app:layout_constraintTop_toTopOf="@+id/txtGiderTarih" />

    <TextView
        android:id="@+id/txtGiderTarih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="5dp"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="08/08/2020 15:15"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtGiderUcret"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtGiderUcret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingRight="5dp"
        android:text="10000 TL"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>